
@{
    ViewBag.Title = "ManageFaq";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div id="ele" ng-controller="FaqController" class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3 style="font-family:yekan;float:right">مدیریت FAQ</h3>

                <div>

                    <div style="float:left;margin-top:20px" class="switch switch-square"
                         data-on-label="<i class=' icon-ok'></i>"
                         data-off-label="<i class='icon-remove'></i>">
                        <input onchange="changeCheck()" id="mySwitch" type="checkbox" />
                    </div>

                    
                </div>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th style="text-align:center;width:40%">پرسش</th>
                        <th style="text-align:center;width:40%">پاسخ</th>
                        <th style="text-align:center;width:10%">وضعیت</th>
                        <th style="width:10%"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in FAQS">
                        <td style="text-align:center">
                            {{x.QuestionText}}
                        </td>
                        <td style="text-align:center">
                            {{x.Answer}}
                        </td>
                        <td style="text-align:center;">
                            <span ng-model="getStatus(x)" style="color:black; background-color: {{x.Color}}" class="label label-mini">
                                {{x.StatusText}}
                            </span>
                        </td>

                        <td style="width:70px">
                            <button ng-click="FillData(x)" class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                            <button ng-click="DeleteData(x.Id)" class="btn btn-danger btn-xs"><i class="icon-trash "></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>



    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                    <h4 class="modal-title">&nbsp;</h4>
                </div>
                <div class="modal-body">

                    <form id="modalForm" role="form">

                        <div class="form-group">
                            <label for="exampleInputPassword1">پرسش </label>
                            <textarea ng-model="FAQ.QuestionText" style="color:black;height:200px;cursor:default" readonly class="form-control" id="ProgressText" name="ProgressText"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">پرسش </label>
                            <textarea ng-model="FAQ.Answer" style="color:black;height:250px;cursor:default" class="form-control" id="ProgressText" name="ProgressText"></textarea>
                        </div>
                        <button ng-click="ChangeQuestion()" class="btn btn-success">ثبت اطلاعات</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
@section SectionJs
{

    

<script src="~/Areas/Admin/Scripts/Angu_Manage_Faq.js"></script>
    <script>
        mySwitch.checked = true;
    </script>

    <!--custom switch-->
    <script src="~/Areas/Admin/js/bootstrap-switch.js"></script>
    <!--custom tagsinput-->
    <script src="~/Areas/Admin/js/jquery.tagsinput.js"></script>
    <!--custom checkbox & radio-->
    <!--common script for all pages-->
    <!--script for this page-->
    <script src="~/Areas/Admin/js/form-component.js"></script>
}


