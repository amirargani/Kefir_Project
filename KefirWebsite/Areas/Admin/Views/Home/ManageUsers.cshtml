
@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div ng-controller="UserController" class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3 style="font-family:yekan;float:right">مدیریت کاربران</h3>
                <a ng-click="ClearData()" id="BtnAdd" style="margin-top:25px; font-size:20px; float:left" href="#myModal" data-toggle="modal" class="btn btn-xs btn-primary right">
                    <i class="icon-plus"></i>
                </a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th style="text-align:center">UserName</th>
                        <th style="text-align:center">نام و نام خانوادگی</th>
                        <th style="text-align:center">وضعیت</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in Users">
                        <td style="text-align:center">
                            {{x.UserName}}
                        </td>
                        <td style="text-align:center">
                            {{x.UserFirstName}}&nbsp;{{x.UserLastName}}
                        </td>
                        <td style="text-align:center">
                            {{x.role.RoleDesc}}
                        </td>
                        <td style="width:70px">
                            <button ng-click="FillData(x.UserId)" class="btn btn-primary btn-xs BtnEdit"><i class="icon-pencil"></i></button>
                            <button ng-click="DeleteData(x.UserId)" class="btn btn-danger btn-xs"><i class="icon-trash "></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>



    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                    <h4 class="modal-title">&nbsp;</h4>
                </div>
                <div class="modal-body">

                    <form id="modalForm" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">نام کاربری</label>
                            <input class="form-control" ng-model="User.UserName" style="color:black" id="ProgressTitle" name="ProgressTitle" type="text">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">رمز عبور</label>
                            <input type="password" ng-model="User.Password" style="color:black;"  class="form-control" id="ProgressText" name="ProgressText" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">نام </label>
                            <input ng-model="User.UserFirstName" style="color:black;"  class="form-control" id="ProgressText" name="ProgressText" />
                        </div>
                        
                        <div class="form-group">
                            <label for="exampleInputPassword1">نام خانوادگی </label>
                            <input ng-model="User.UserLastName" style="color:black;"  class="form-control" id="ProgressText" name="ProgressText" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">ایمیل </label>
                            <input ng-model="User.UserEmail" style="color:black;" class="form-control" id="ProgressText" name="ProgressText" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">وضعیت کاربر </label>
                            <select id="RoleId" style="width:100%">
                                <option selected>مدیر سیستم</option>
                                <option>کاربر عادی</option>
                            </select>
                        </div>
                        <button ng-click="SaveData()" id="BtnSendData" type="button" class="btn btn-success">ذخیره</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
@section SectionJs
{
<script src="~/Areas/Admin/Scripts/Angu_Manage_Users.js"></script>
    

}


