
@{
    ViewBag.Title = "ManageSlide";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div ng-controller="SlideController" class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3 style="font-family:yekan;float:right">مدیریت Slides</h3>
                <a ng-click="ClearData()" id="BtnAdd" style="margin-top:25px; font-size:20px; float:left" href="#myModal" data-toggle="modal" class="btn btn-xs btn-primary right">
                    <i class="icon-plus"></i>
                </a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th style="text-align:center">عنوان</th>
                        <th style="text-align:center">توضیحات تصویر</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in Slides">
                        <input type="hidden" value="{{x.SlideId}}" />
                        <td>
                            {{x.SlideSimpleTitle}}&nbsp;{{x.SlideCssTitle}}
                        </td>
                        <td>
                            {{x.SlidePicDesc}}
                        </td>
                        <td style="width:70px">
                            <button ng-click="FillData(x.SlideId)" class="btn btn-primary btn-xs BtnEdit"><i class="icon-pencil"></i></button>
                            <button ng-click="DeleteData(x.SlideId)" class="btn btn-danger btn-xs"><i class="icon-trash "></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>



    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                    <h4 class="modal-title">&nbsp;</h4>
                </div>
                <div class="modal-body">

                    <form id="modalForm" role="form">
                        <input class="form-control" ng-model="slide.SlideId"  style="color:black" id="SlideId" name="SlideId" type="hidden">
                        <div class="form-group">
                            <label for="exampleInputEmail1">عنوان</label>
                            <input class="form-control" ng-model="slide.SlideSimpleTitle" style="color:black" id="SlideSimpleTitle" name="SlideSimpleTitle" type="text">
                            <input class="form-control" ng-model="slide.SlideCssTitle"  style="color:#028fcc" id="SlideCssTitle" name="SlideCssTitle" type="text">
                        </div>
                        

                        <div class="form-group">
                            <label for="exampleInputPassword1">توضیحات</label>
                            <textarea ng-model="slide.SlidePicDesc"  style="color:black;resize:vertical;height:100px" class="form-control" id="SlidePicDesc" name="SlidePicDesc"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">متن</label>
                            <textarea ng-model="slide.SlideText"style="color:black;resize:vertical;height:250px" class="form-control" id="SlideText" name="SlideText"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">آپلود عکس</label>
                            <input  id="imgUpload" name="imgUpload" type="file" />
                        </div>
                        <button ng-click="SaveData()" id="BtnSendData" type="button" class="btn btn-success">ذخیره</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
@section SectionJs
{

<script src="~/Areas/Admin/Scripts/Angu_Manage_Slides.js"></script>

}


